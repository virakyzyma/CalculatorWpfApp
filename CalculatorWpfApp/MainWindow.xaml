<Window x:Class="CalculatorWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Введите стоимомть покупки:" Margin="306,99,293,41"/>
        <TextBox x:Name="purchaseTextBox" Grid.Row="1" Margin="10" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Content="Рассчитать сумму" Click="CalculateTotal_Click" HorizontalAlignment="Center" Margin="10" Width="120"/>
        <TextBlock x:Name="totalTextBlock" Grid.Row="3" Margin="10" TextWrapping="Wrap"/>
    </Grid>
</Window>
